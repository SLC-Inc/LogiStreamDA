<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/setInmsgText"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:text="ロケーションラベルを\n読み取って下さい。"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="保管場所"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/setInPlaceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="ロケーション"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/setInLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:text="品目"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/setInItemCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.9"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/setInItemNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="ロットNo."
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/setInLotNoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/volLabel"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="論理数量"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/setInVolText"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.9"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/setInUnitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginRight="30dp"
                android:text=""
                android:textSize="28dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/numLabel"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="実数量"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/setInNumText"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.9"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/setInUnitText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginRight="30dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <EditText
                android:id="@+id/setInQRcodeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="バーコード" />

            <Button
                android:id="@+id/setInQRcodeReadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="QRコード読取" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/returnBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="戻る"
                android:textSize="20dp"
                android:theme="@style/FooterButtonColor" />

            <Button
                android:id="@+id/setCompBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text=""
                android:textSize="20dp"
                android:theme="@style/FooterButtonColor" />

            <Button
                android:id="@+id/setNextLocaBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text=""
                android:textSize="20dp"
                android:theme="@style/FooterButtonColor" />

            <Button
                android:id="@+id/setInNextBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:enabled="false"
                android:text="確定"
                android:textSize="20dp"
                android:theme="@style/FooterButtonColor" />

        </LinearLayout>

    </LinearLayout>